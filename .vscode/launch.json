    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach Debugger",
            "processId": "${command:PickProcess}",
            "restart": true,
            "protocol": "inspector",
        },
        {
            "name": "firefox",
            "type": "firefox",
            "request": "launch",
            "url": "https://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend/src"
        }
    ]
}